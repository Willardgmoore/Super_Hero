<%= form_for @super_person do |x| %>
  <%= x.label :name %>: 
  <%= x.text_field :name %><br>

  <%= x.label :gender %>: 
  <%= x.select :gender, options_for_select([['Female', true], ['Male', false]])%><br>

  <%= x.label :nemesis_id %>:
  <%= x.collection_select(:name, SuperPerson.all, :id, :name) %><br>

  <%= x.label :has_cape %>:
  <%= x.select :has_cape, options_for_select([['Yes', true], ['No', false]])%><br>

  <%= x.label :location %>:
  <%= x.text_field :location %><br>

  <%= x.label :weakness %>:
  <%= x.text_field :weakness %><br>

  <%= x.label :is_hero %>:
  <%= x.select :is_hero, options_for_select([['Yes', true], ['No', false]])%><br>

  <%= x.label :description %>:
  <%= x.text_field :description %><br>

  <%= x.submit %>
<% end %>